---
interface Props {
  label: string;
  name: string;
  checked: boolean;
}

const { label, name, checked } = Astro.props;
---

<div class="input">
  <input
    class="input__field"
    type="checkbox"
    name={name}
    id={name}
    checked={checked}
  />
  <label class="input__label" for={name}>{label}</label>
</div>
<style>
  .input {
    width: 100%;
    display: flex;
    gap: calc(var(--lh) / 3);
    align-items: center;
  }

  .input__label {
    color: inherit;
  }

  .input__field {
    display: block;
    font: inherit;
    padding-block: calc(var(--lh) / 4);
    padding-inline: calc(var(--lh) / 3);
    border-radius: 4px;
    border: none;
    box-shadow: 0 0 0 4px var(--color-border);

    &:focus,
    &:hover {
      outline: 2px solid var(--color-accent);
      outline-offset: 2px;
    }
  }
</style>
