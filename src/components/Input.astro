---
interface Props {
  label: string;
  name: string;
  placeholder?: string;
  type: "text" | "email";
  required?: boolean;
}

const { label, required, type, name, placeholder } = Astro.props;
---

<div class="input">
  <label class="input__label" for={name}
    >{label} {required ? "(required)" : "(optional)"}</label
  >
  <input
    class="input__field"
    type={type}
    name={name}
    id={name}
    required={required}
    placeholder={placeholder}
  />
</div>

<style>
  .input {
    width: 100%;
  }

  .input__label {
    font-weight: 600;
    display: block;
    margin-block-end: calc(var(--lh) / 4);
  }

  .input__field {
    display: block;
    font: inherit;
    width: 100%;
    padding-block: calc(var(--lh) / 4);
    padding-inline: calc(var(--lh) / 3);
    border-radius: 4px;
    border: none;
    box-shadow: 0 0 0 4px var(--color-border-light);
    background-color: var(--color-border);

    &:focus,
    &:hover {
      outline: 2px solid var(--color-accent);
      outline-offset: 2px;
    }
  }

  html.light_mode{
    .input__field {
      box-shadow: 0 0 0 4px var(--lm-color-border-light);
      background-color: var(--lm-color-bg);
      color:var(--color-bg);

      &:focus,
      &:hover {
        outline: 2px solid var(--lm-color-accent);
      }
    }
  }
</style>
